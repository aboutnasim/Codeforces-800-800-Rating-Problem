#include<bits/stdc++.h>
using namespace std;
#define endl "\n"
#define mem(a,b) memset(a,b,sizeof(a))
#define sqr(a) (a*a)
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define fraction() cout.unsetf(ios::floatfield); cout.precision(12); cout.setf(ios::fixed,ios::floatfield);





int main()
{
    optimize();
    fraction();

    int n;
    double sum=0;
    cin>>n;
    int a[n];
    for(int i=0; i<n; i++)
    {
        cin>>a[i];
    }

    for(int i=0; i<n; i++)
    {
        sum+=a[i];
    }

    sum=sum/n;
    cout<<sum<<endl;
    return 0;
}
