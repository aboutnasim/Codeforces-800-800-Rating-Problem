#include<bits/stdc++.h>
using namespace std;
#define endl "\n"
#define mem(a,b) memset(a,b,sizeof(a))
#define sqr(a) (a*a)
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define fraction() cout.unsetf(ios::floatfield); cout.precision(10); cout.setf(ios::fixed,ios::floatfield);





int main()
{
    optimize();
    int t;
    int mx=0;
    cin>>t;
    int sum=0;

    while(t--)
    {
        int a,b;
        cin>>a>>b;

        sum+=b-a;

        if(mx<sum)
        {
            int temp=mx;
            mx=sum;
        }
    }
    cout<<mx<<endl;

    return 0;
}
