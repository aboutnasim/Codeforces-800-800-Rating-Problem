#include<bits/stdc++.h>
using namespace std;
#define endl "\n"
#define mem(a,b) memset(a,b,sizeof(a))
#define sqr(a) (a*a)
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define fraction() cout.unsetf(ios::floatfield); cout.precision(10); cout.setf(ios::fixed,ios::floatfield);





int main()
{
    optimize();
    int n,cnt=0;
    cin>>n;

    while(n)
    {

        if(n>=100)
        {
            n= n-100;
            cnt++;
        }
        else if(n>=20)
        {
            n=n-20;
            cnt++;
        }
        else if(n>=10)
        {
            n=n-10;
            cnt++;
        }
        else if(n>=5)
        {
            n=n-5;
            cnt++;
        }
        else if(n>=1)
        {
            n= n-1;
            cnt++;
        }
    }

    cout<<cnt<<endl;
    return 0;
}
